<h1>Список продуктов</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Количество</th>
      <th scope="col">Ссылка</th>
      <th scope="col">Желаемый срок</th>
      <th scope="col">Автор</th>
      <th scope="col">Статус</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.quantity}}</td>
        <td><a href="{{this.url}}" target="_blank">{{this.url}}</a></td>
        <td>{{this.desirable_deadline}}</td>
        <td>{{this.author}}</td>
        <td>{{this.Status}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
