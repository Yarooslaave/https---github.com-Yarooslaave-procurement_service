<h1>Заказы</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Количество</th>
      <th scope="col">Ссылка</th>
      <th scope="col">Желаемый срок</th>
      <th scope="col">Автор</th>
      <th scope="col">Статус</th>
    </tr>
  </thead>
  <tbody>
    {{#each order_admin}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.quantity}}</td>
        <td><a href="{{this.url}}" target="_blank">{{this.url}}</a></td>
        <td>{{date this.desirable_deadline}}</td>
        <td>{{this.author}}</td>
        <td>
            <form action="/update_status" method="post">
                <select name="status" class="form-control" aria-label="Status" aria-describedby="basic">
                <option value="Закупаем" {{#if (eq this.Status "Закупаем")}}selected{{/if}}>Закупаем</option>
                <option value="Ждём" {{#if (eq this.Status "Ждём")}}selected{{/if}}>Ждём</option>
                <option value="Забрать" {{#if (eq this.Status "Забрать")}}selected{{/if}}>Забрать</option>
                </select>
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="submit" class="waves-effect waves-light btn" value="Обновить">
            </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
